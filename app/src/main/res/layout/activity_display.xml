<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="They are saying ------------ to you.Kindly reply them in a responsible way
Incase,if u don't know how to response them. we have etutorials here.so response them correctly."
        android:lines="13"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic|bold"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:rowCount="1"
        android:columnCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBook"
            android:layout_width="2dp"
            android:layout_height="1dp"
            android:layout_rowWeight="10"


            android:layout_columnWeight="10"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="159dp"
                android:layout_height="184dp"
                android:padding="10px"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="2px"
                android:layout_marginLeft="2px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/book"
                    android:layout_margin="10dp"
                    android:id="@+id/imageBook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardHome"
            android:layout_width="2dp"
            android:layout_height="1dp"
            android:layout_rowWeight="10"


            android:layout_columnWeight="10"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="159dp"
                android:layout_height="184dp"
                android:padding="10px"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="2px"
                android:layout_marginLeft="2px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/homeimg"

                    android:layout_margin="10dp"
                    android:id="@+id/img2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="home"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</LinearLayout>